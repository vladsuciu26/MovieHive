<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextEditStyle">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_design</item>
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/selector_icon_color</item>
        <item name="itemTextColor">@drawable/selector_text_color</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">4dp</item>
    </style>
</resources>